    <h1>Add a New Wine</h1>
    <!-- <img src= pokemon.img % >  -->
    <br />

    <h2>Wine info</h2>
    <form action="/wines" method="POST">
        
    <ul>Producer: <input type="text" name="producerId">  </ul>
    <ul>Wine Type: <input type="text" name="name">  </ul>
    <ul>Vintage:  <input type="text" name="year"> </ul>
    <ul>Price paid:  <input type="text" name="price"> </ul>
    <ul>Quantity in stock:  <input type="text" name="quantity"> </ul>
    <ul>Tasting notes:  <input type="text" name="tastingId"> </ul>
    <ul>Your rating:  <input type="text" name="rating"> </ul>
    <!-- <ul>Color:  <input type="text" name="color"> </ul> -->
    <ul>Color: <select name="color">
            <option value="Red">Red</option>
            <option value="White">White</option>
            <option value="Other">Other</option>
        </select>
    </ul>

    <ul>Country: <input type="text" name="countryId"> </ul>
    <ul>Purchased at: <input type="text" name="sellerId"> </ul>
    <ul>Additional comments: <br />
        <textarea name="generalNotes" rows="4" cols="50">
        </textarea>
    </ul>
    <ul><input type="submit" value="Add Wine"/></ul>
    </form>
  
