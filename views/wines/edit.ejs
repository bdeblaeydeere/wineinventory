<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wine Inventory</title>
    <link rel="stylesheet" href="https://bootswatch.com/5/lux/bootstrap.min.css">

</head>

<body>
    <h1>Wine EDIT Page</h1>
    Your Wine <%= wine.name %> <br>
        <!-- <img src= pokemon.img % >  -->
        <br />
        <h2>Wine info</h2>
        <form action="/wines/<%= wine.id %>?_method=PUT" method="POST">
            <ul>Wine Name: <input type="text" name="name" value="<%= wine.name %>" required> </ul>
            <ul>Producer: <Select name="producerId" id="<%=wine.producerId%>" selected>
                <% producer.forEach  ((eachProducer, index) => { %>
              <%  if (wine.producerId === producer[index].id) { %>
                    <option value="<%=producer[index].id%>" selected><%=index%> - <%=producer[index].producerName  %> </option>
              <%  } else { %>
                    <option value="<%=producer[index].id%>"><%=index%> - <%=producer[index].producerName  %> </option>
                <% }}) %>
            </Select>
            </ul>
            
            <ul>Country: <select name="countryId" id="<%= wine.Country.countryName %>" selected>
                <% country.forEach  ((eachCountry, index) => { %>
                    <option value="<%=index%>"><%=index%> - <%=country[index].countryName  %> </option>
                    <% }) %>
                </Select>
            </ul>


            <ul>Vintage Year: <input type="text" name="year" value="<%= wine.year %>"></ul>
            <ul>Quantity in stock: <input type="text" name="quantity" value="<%= wine.quantity %>"></ul>
            <ul>Price paid: <input type="text" name="price" value="<%= wine.price %>"></ul>
            <ul>Tasting notes: <input type="text" name="tastingId" value="<%= wine.tastingId %>"></ul>
            <ul>Your rating: <input type="text" name="rating" value="<%= wine.rating %>"></ul>
            <!-- <ul>Color:  <input type="text" name="color"> </ul> -->
            <ul>Color: <select name="color" value="<%= wine.color %>" selected>
                    <option value="1">Red</option>
                    <option value="2">White</option>
                    <option value="3">Other</option>
                </select>
            </ul>

            <ul>Purchased at: <select name="sellerId" value="<%= wine.Seller.sellerId %>" selected>
                <% seller.forEach  ((eachSeller, index) => { %>
                    <option value="<%=index%>"><%=index%> - <%=seller[index].sellerName  %> </option>
                    <% }) %>
                </Select>
            </ul>

            
            <ul>Additional comments: <input type="text" name="generalNotes" value="<%= wine.generalNotes %>"></ul><br />

            <br />
            <input type="submit" value="Save Changes" />
        </form>

        <br />

        <!--  ADD DELETE FORM HERE-->

        <form action="/wines/<%= wine.id %>?_method=DELETE" method="POST">
            <input type="submit" value="DELETE" />

        </form>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-kQtW33rZJAHjgefvhyyzcGF3C5TFyBQBA13V1RKPf4uH+bwyzQxZ6CmMZHmNBEfJ"
            crossorigin="anonymous"></script>

</body>

</html>