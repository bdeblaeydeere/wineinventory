    <h1>Wine Inventory Configuration Page</h1>

<!-- Adding a Country  -->
    <div class="card border-primary mb-3" style="max-width: 20rem;">
        <div class="card-header">Add a Country</div>
        <div class="card-body">
          <!-- <h4 class="card-title">Primary card title</h4> -->
          <form action="/configs/countries" method="POST">
            Country:  <input type="text" name="countryName">
            <input type="submit" value="Add"/>
            </form>
          <!-- <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> -->
        </div>
      </div>
      
<!-- Adding a Producer  -->
      <div class="card border-primary mb-3" style="max-width: 20rem;">
        <div class="card-header">Add a Producer</div>
        <div class="card-body">
          <!-- <h4 class="card-title">Primary card title</h4> -->
          <form action="/configs/producers" method="POST">
            Producer:  <input type="text" name="producerName">
            <input type="submit" value="Add"/>
            </form>
          <!-- <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> -->
        </div>
      </div>
     
<!-- Adding a Seller  -->
<div class="card border-primary mb-3" style="max-width: 20rem;">
  <div class="card-header">Add a Seller</div>
  <div class="card-body">
    <!-- <h4 class="card-title">Primary card title</h4> -->
    <form action="/configs/sellers" method="POST">
      Producer:  <input type="text" name="sellerName">
      <input type="submit" value="Add"/>
      </form>
    <!-- <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> -->
  </div>
</div>
<!-- Adding a Tasting Note  -->
<div class="card border-primary mb-3" style="max-width: 20rem;">
  <div class="card-header">Add a Tasting Note</div>
  <div class="card-body">
    <!-- <h4 class="card-title">Primary card title</h4> -->
    <form action="/configs/notes" method="POST">
      Tasting Note:  <input type="text" name="name">
      <input type="submit" value="Add"/>
      </form>
    <!-- <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> -->
  </div>
</div>

<!-- Deleting a Country  -->
      <div class="card border-primary mb-3" style="max-width: 20rem;">
        <div class="card-header">Delete a Country</div>
        <div class="card-body">
          <form action="/configs/countries?_method=DELETE" method="POST">
            Country:
            <select name="countryId">
              <% countries.forEach ((eachCountry, index)=> { %>
                <option value="<%=countries[index].id%>">
                  <%=countries[index].countryName %>
                </option>
                <% }) %>
            </Select>
            <input type="submit" value="Delete" />
          </form>
          <!-- <h4 class="card-title">Primary card title</h4> -->
          <!-- <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p> -->
        </div>
      </div>

      <!-- Deleting a Producer  -->
      <div class="card border-primary mb-3" style="max-width: 20rem;">
        <div class="card-header">Delete a Producer</div>
